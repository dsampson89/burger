<h1>Eat DA Burger</h1>

<h2>Burgers ready to eat!</h2>

<ul>
  <li>
	{{#each burgers}}
    {{#unless this.devoured}}
      {{this.id}}. {{this.burger_name}}
    {{/unless}}
  {{/each}}

	<button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
		{{#if devoured}}Devour IT!{{/if}}
	</button>
  </li>
  
</ul>

<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      {{this.id}}. {{this.burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
